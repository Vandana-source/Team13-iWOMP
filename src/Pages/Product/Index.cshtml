@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Index page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div class="container" id="benches-section">
    <a class="font-weight-bold" asp-page="Create">+ Create </a>
    <table class="table table-bordered table-hover table">
        <thead>
            <tr>
                <th colspan="4">Benches</th>
            </tr>
        </thead>
        @foreach (var product in Model.Products)
        {
            <tbody>
                @if (product.LocationType == "Bench")
                {
                    <tr>
                        <td>@product.Title</td>
                        <td>
                            <a class="font-weight-bold" asp-page="Read" asp-route-id="@product.Id">
                                <center><span class="read-icon">📖</span>Read</center>

                            </a>
                        </td>
                        <td>
                            <a class="font-weight-bold" asp-page="Update" asp-route-id="@product.Id">
                                <center><span class="read-icon fas fa-pencil-alt"></span> Update</center>

                            </a>
                        </td>
                        <td>
                            <a class="font-weight-bold" asp-page="Delete" asp-route-id="@product.Id">
                                <center><span class="read-icon fas fa-trash-alt"></span> Delete</center>

                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>

