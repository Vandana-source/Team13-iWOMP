@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Index page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div class="container" id="benches-section">
    <a class="font-weight-bold" asp-page="Create">+ Create</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="skinny-col">Benches</th>
                <th class="skinny-col">Read</th>
                <th class="skinny-col">Update</th>
                <th class="skinny-col">Delete</th>
            </tr>
        </thead>
        @foreach (var product in Model.Products)
        {
            @if (product.LocationType == "Bench")
            {
                <tbody>
                    <tr>
                        <td>@product.Title</td>
                        <td class="text-center skinny-col">
                            <a class="font-weight-bold" asp-page="Read" asp-route-id="@product.Id">
                                <span class="sm-icon fas fa-book"></span> Read
                            </a>
                        </td>
                        <td class="text-center skinny-col">
                            <a class="font-weight-bold" asp-page="Update" asp-route-id="@product.Id">
                                <span class="sm-icon fas fa-pencil-alt"></span> Update
                            </a>
                        </td>
                        <td class="text-center skinny-col">
                            <a class="font-weight-bold" asp-page="Delete" asp-route-id="@product.Id">
                                <span class="sm-icon fas fa-trash-alt"></span> Delete
                            </a>
                        </td>
                    </tr>
                </tbody>
            }
        }
    </table>
</div>

