@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.DeleteModel

@{
    ViewData["Title"] = "Delete Page";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h1 class="update-page-title">Delete Place</h1>

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label asp-for="Product.Title" class="control-label"></label>
            <input asp-for="Product.Title" class="form-control" readonly />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.LocationType" class="control-label"></label>
            <input asp-for="Product.LocationType" class="form-control" readonly />
            <span asp-validation-for="Product.LocationType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Neighborhood" class="control-label"></label>
            <input asp-for="Product.Neighborhood" class="form-control" readonly />
            <span asp-validation-for="Product.Neighborhood" class="text-danger"></span>
        </div>

        <label class="form-label">Noise Level Rating : (1 is Good, 10 is Bad)</label>
        <div class="d-flex flex-row align-items-center">
            @for (int i = 1; i <= 10; i++)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Product.NoiseLevel"
                           id="@("rating" + i)" value="@i" asp-for="Product.NoiseLevel">
                    <label class="form-check-label" for="@("rating" + i)">@i</label>
                </div>
            }
        </div>

        <div class="form-group">
            <label class="control-label" asp-for="Product.Description"></label>
            <input class="form-control" asp-for="Product.Description" readonly>
            <span class="text-danger" asp-validation-for="Product.Description"></span>
        </div>

        <div class="form-group">
            <label class="control-label" asp-for="Product.MapURL"></label>
            <input class="form-control" asp-for="Product.MapURL" readonly>
            <span class="text-danger" asp-validation-for="Product.MapURL"></span>
        </div>
        <br />
        <br />
        <h1>Are you sure?</h1>
        <div class="button-row">
            <div class="form-group">
                <a class="btn btn-primary" asp-page="Index">Cancel</a>
            </div>
            &nbsp; &nbsp
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger">
            </div>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
